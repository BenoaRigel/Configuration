
&НаКлиенте
Процедура Команда1(Команда)
	Выходной = 0;
	Рабочий = 0;
		Для НомерГода = 2023 По 2033 Цикл
		Рабочий = 0;
		Для НомерМесяца = 1 По 12 Цикл 
			//ДатаМесяца = Дата(2023, Месяц, 1);
			ПоследнийДень = КонецМесяца(Дата(НомерГода, НомерМесяца, 1));
			НомерДня = День(ПоследнийДень);
		
			Для День = 1 По НомерДня Цикл
			
				НашДень = Дата(НомерГода, НомерМесяца, День);
				Если ДеньНедели(НашДень) > 5 Тогда 
					Выходной = Выходной + 1;
				Иначе 
					Рабочий = Рабочий + 1;
				КонецЕсли;	
			КонецЦикла;
		КонецЦикла; 
		СтрокаГод = Формат(НомерГода, "ЧГ=");
		
		Сообщить("В " + СтрокаГод + " году " + Рабочий + " рабочих дн.");
	КонецЦикла;
	//Сообщить(Рабочий);
	//Сообщить(Выходной);
КонецПроцедуры
